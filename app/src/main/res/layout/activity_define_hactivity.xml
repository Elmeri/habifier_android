<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.elmeripoikolainen.habifier.DefineHactivity">


    <EditText
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:id="@+id/define_hactivity_hactivity_name"
    android:hint="@string/define_hactivity_hactivity_name"
    android:singleLine="true"
    android:inputType="textCapWords"/>


    <Button
        android:layout_height="40dip"
        android:layout_width="40dip"
        android:layout_below="@+id/define_hactivity_hactivity_name"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:contentDescription=""
        style="?android:attr/quickContactBadgeStyleWindowMedium"
        android:id="@+id/defineHactivitySelectColor"
        android:onClick="colorButtonClicked"/>

    <!--DOES NOT WORK! WHY?-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/define_hactivity_hactivity_name"
        android:layout_toRightOf="@+id/defineHactivitySelectColor"
        android:id="@+id/defineHactivityCancel"
        android:text="Cancel"
        android:onClick="onCancelButtonClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/define_hactivity_hactivity_name"
        android:layout_toRightOf="@+id/defineHactivityCancel"
        android:layout_alignParentRight="true"
        android:id="@+id/defineHactivityDone"
        android:text="Done"
        android:onClick="onDoneButtonClicked"/>





</RelativeLayout>
